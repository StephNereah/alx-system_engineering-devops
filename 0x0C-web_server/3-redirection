#!/usr/bin/env bash
# script that installs Nginx server and redirects /redirect_me to
# another page
# The redirection must be a “301 Moved Permanently”

apt-get -y update
apt-get -y install nginx
service nginx start

# Debugging: Check before applying the rewrite
curl -I http://localhost/redirect_me || echo "Before rewrite: Failed to fetch /redirect_me"

# Set the content of the index page
echo "Hello World!" > /var/www/html/index.nginx-debian.html

# Add redirection rule to the Nginx configuration
sed -i "/server_name _;/ a\\\trewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;" /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
service nginx restart

# Debugging: Check after applying the rewrite
curl -I http://localhost/redirect_me || echo "After rewrite: Failed to fetch /redirect_me"
